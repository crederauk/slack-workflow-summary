{
  "name": "slack-workflow-summary",
  "version": "1.1.0",
  "private": true,
  "description": "Github Action to post a summary of the current workflow to slack",
  "main": "src/main.ts",
  "scripts": {
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lewis-od/slack-workflow-summary.git"
  },
  "keywords": [
    "actions",
    "node",
    "typescript",
    "slack"
  ],
  "author": "Lewis O'Driscoll",
  "dependencies": {
    "@actions/core": "^1.4.0",
    "@actions/github": "^5.0.0",
    "@slack/webhook": "^6.0.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^17.0.21",
    "@typescript-eslint/parser": "^5.0.0",
    "@vercel/ncc": "^0.31.1",
    "eslint": "^7.31.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^25.0.5",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": ">=6",
    "jest": "^27.2.5",
    "js-yaml": "^4.1.0",
    "lint-staged": ">=10",
    "prettier": "2.4.1",
    "ts-jest": "^27.0.3",
    "typescript": "^4.1.3"
  },
  "lint-staged": {
    "*.ts": ["eslint --cache --fix", "prettier --write"]
  }
}
